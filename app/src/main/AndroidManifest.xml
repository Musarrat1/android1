<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android1"
        tools:targetApi="31">
        <activity
            android:name=".BakeryActivity1"
            android:exported="false" />
        <!-- MainActivity serves as the launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- OrderActivity is part of the app but not directly exposed -->
        <activity
            android:name=".OrderActivity"
            android:exported="false" /> <!-- FormActivity is part of the app but not directly exposed -->
        <activity
            android:name=".FormActivity"
            android:exported="false" /> <!-- BakeryActivity is part of the app but not directly exposed -->
        <activity
            android:name=".BakeryActivity"
            android:exported="false" />
        <activity
            android:name=".BakeryActivity1"
            android:exported="false"
            tools:ignore="DuplicateActivity" />

    </application>

</manifest>