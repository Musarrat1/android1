<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5"/> <!-- Light shadow color -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main background -->
    <item android:left="2dp" android:right="2dp" android:top="4dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White card color -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
