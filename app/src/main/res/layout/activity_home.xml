<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"> <!-- Set a light background for contrast -->

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_your_item"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#333333"/>

    <!-- Select Bakery Items -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_items"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="#333333" />

    <!-- Checkboxes for items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/croissant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/croissant"
            android:textColor="#333333" />

        <CheckBox
            android:id="@+id/donut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/donut"
            android:textColor="#333333" />

        <CheckBox
            android:id="@+id/eclair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/eclair"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- Select Bakery Item Size -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_size"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="15dp" />

    <RadioGroup
        android:id="@+id/sizeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/small"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medium"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/large"
            android:textColor="#333333" />
    </RadioGroup>

    <!-- Select Quantity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <!-- Decrement Quantity -->
        <Button
            android:id="@+id/decrementQty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/minus"
            android:textSize="18sp"
            android:backgroundTint="#C9BD58"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginHorizontal="15dp" />

        <!-- Increment Quantity -->
        <Button
            android:id="@+id/incrementQty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/plus"
            android:textSize="18sp"
            android:backgroundTint="#C9BD58"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_bdt_100_each"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_bdt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="5dp" />

    <!-- SeekBar for custom quantity selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Quantity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="15dp" />

    <SeekBar
        android:id="@+id/quantitySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/seekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected: 0"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="5dp" />

    <!-- Switch for Express Delivery -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Express Delivery?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="15dp" />

    <Switch
        android:id="@+id/expressDeliverySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Express Delivery"
        android:textColor="#333333"
        android:layout_marginTop="10dp" />




    <!-- Rating Bar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_us"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:progressTint="#C9BD58"
        android:progressBackgroundTint="#FFEB3B" />

    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <!-- Place Order Button -->
    <Button
        android:id="@+id/placeOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/place_order"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E91E63" />
</LinearLayout>
